<script type="text/javascript">

    function EnviarEmail(){

        var enviosugerencia={
            "nombre" : $("#name").val(),
            "email" : $("#email").val(),
            "message" : $("#message").val()
        }

     //   console.log(enviosugerencia);

       $.ajax({
            type:'POST',
            dataType: 'json',
            url: "{{url('akademia_sendemail')}}",
            data: enviosugerencia,
            beforeSend: function(){
            },success: function(data){
                var div='';
                    div +='<div class="alert alert-success">El mensaje se ha enviado exitosamente! </div>'
                    $('#alertaEnvio').html(div); 
                    $("#name").val("");
                    $("#email").val("");
                    $("#message").val("");
                console.log(data); 

            }, error: function(error){
                console.log(error);
            }
        })
    }

    $("#btnEnviar").on('click',function(){

        if($("#name").val()==""){
            alertify.error('<p style="color:white">Se requiere el nombre.</p>'); 
        }else if($("#email").val()==""){
             alertify.error('<p style="color:white">Se requiere el correo electrónico.</p>'); 
        }else if($("#message").val()==""){
             alertify.error('<p style="color:white">Se requiere el contenido del mensaje</p>'); 

        }

    });
  


</script>


