
{%  if flagUser == "0" %}

	<thead style="color:#fff; background-color:#CB3F1D; display:block;">
	  <tr style="display:block;">

	    <th {% if flag != 0  %} 
	    		class="col-xs-3" style=" background-color:#CB3F1D; float:left; display:block;" 
	    	{% else %} 
	    		class="col-xs-4" style=" background-color:rgba(64, 172, 44, 0.8); border-color:rgba(64, 172, 60, 1); float:left; display:block;"  {% endif %} >
	    	Edad
	    </th>

	    <th {% if flag != 0  %} 
	    		class="col-xs-4" style=" background-color:#CB3F1D; float:left; display:block;" 
	    	{% else  %} 
	    		class="col-xs-4" style=" background-color:rgba(64, 172, 44, 0.8); border-color:rgba(64, 172, 60, 1); float:left; display:block;" 
	    	{% endif %} >
	    	Días
	    </th>

	    <th {% if flag != 0  %} 
	    		class="col-xs-3" style=" background-color:#CB3F1D; float:left; display:block;" 
	    	{% else  %} 
	    		class="col-xs-4" style=" background-color:rgba(64, 172, 44, 0.8); border-color:rgba(64, 172, 60, 1); float:left; display:block;" 
	    	{% endif %} >
	   		Horas
	   	</th>

	    {% if flag != 0  %}
	    	<th class="col-xs-2" style=" background-color:#CB3F1D; float:left; display:block;">Escoger</th>
	    {%  endif %}

	  </tr>
	</thead>

	<tbody id="bodyHorario" style="height:20vh; overflow-y:auto ; width:100%; display:block; " >
		{% for horario in horarios %}

		<tr style="display:block;">
			<td style="float:left; display:block;" {% if flag != 0  %} class="col-xs-3"  {% else %} class="col-xs-4" {% endif %} >
				{{horario.edad}}
			</td>

			<td style="float:left; display:block;" {% if flag != 0  %} class="col-xs-4"  {% else %} class="col-xs-4" {% endif %} >
				{% for turno in turnos %}

					{% if turno.idHorario == horario.id %}
						<div>{{turno.frecuencia}}</div>		
					{% endif %}

				{% endfor %}
			</td>

			<td style="float:left; display:block;" {% if flag != 0  %} class="col-xs-3"  {% else %} class="col-xs-4" {% endif %} >
				{% for turno in turnos %}

					{% if turno.idHorario == horario.id %}
						<div>{{turno.hora}}</div>		
					{% endif %}
						
				{% endfor %}
			</td>

			{% if flag != 0  %}
				<td  style="float:left; display:block;" class="col-xs-2" >
					<div class="options">
		    			<label  id="label-checkbox" data-toggle="tooltip" title="Click aquí para escoger horario!" >
		        			<input type="radio" name="codHorario" value="{{horario.id}}"/>
		        			<img  style="cursor:pointer;" class="img-checkbox"/>   
		   				</label>
		   			</div>
				</td>
			{% endif %}
			
		</tr>

		{% endfor %}
	</tbody>


	{%  elseif flagUser == "1" %}


		<thead style="color:#fff; background-color:#CB3F1D; display:block;">

		  	<tr style="display:block; width:100%;">

			    <th  class="col-xs-3" style=" background-color:#CB3F1D; float:left; display:block;">Edad</th>

				<th class="col-xs-2" style="background-color:#CB3F1D;float:left; display:block;">Etapa</th>

			    <th class="col-xs-3" style=" background-color:#CB3F1D; float:left; display:block; ">Días</th>

			    <th class="col-xs-2" style=" background-color:#CB3F1D; float:left; display:block;">Horas</th>

		    	<th class="col-xs-2" style=" background-color:#CB3F1D; float:left; display:block;">Escoger</th>
		  	</tr>

		</thead>

	<tbody id="bodyHorario"  style="height:20vh;overflow-y:auto;overflow-x:auto;width:100%; display:block;">

		{% for horario in horarios %}

			<tr style="display:block;width:100%; height:auto;background-color:yellow;" class="trBody" >
				<td style="float:left; display:block;padding-left:0;padding-right:0;" class="col-xs-3"  >
					{{horario.edad}}
				</td>

				<td style="float:left; display:block;" class="col-xs-2" >
					{{horario.etapa}}
				</td>

				<td style="float:left; display:block;padding-left:0;padding-right:0;"  class="col-xs-3"  >
					{% for turno in turnos %}

						{% if turno.idHorario == horario.id %}
							<div>{{turno.frecuencia}}</div>		
						{% endif %}

					{% endfor %}
				</td>

				<td style="float:left; display:block; padding-left:0;padding-right:0;" class="col-xs-2">
					{% for turno in turnos %}

						{% if turno.idHorario == horario.id %}
							<div>{{turno.hora}}</div>		
						{% endif %}
							
					{% endfor %}
				</td>

				<td  style="float:left; display:block;"  class="col-xs-2">
					<div class="options">
		    			<label  id="label-checkbox" data-toggle="tooltip" title="Click aquí para escoger horario!" >
		        			<input type="radio" name="codHorario" value="{{horario.id}}" />
		        			<img  style="cursor:pointer;"  class="img-checkbox" />   
		   				</label>
		   			</div>
				</td>

			</tr>

		{% endfor %}
	</tbody>

{%  endif %}

