<section  id="inscribete"  class="proceso-inscripcion">
	<div style="width:93%">
		<p class="text-right" style="color:grey" >Sesión iniciada: {{ app.user.username}} </p>
	</div>
	<div class="container text-center" style="margin-top: 10px; margin-bottom: 30px;">
		
		{% if  is_granted('ROLE_ANALISTA') %}	
			<h1>LA ACADEMIA IPD </h1>
		{% else %}
			{% if valor == '1'%}
				<h1> CP {{nombreComplejo[0]['nombreComplejo'] }} </h1>
			{% elseif valor == '2' %}
				<h1> Complejo Deportivo - IPD </h1>
			{% endif %}
		{% endif %}

		<h4 style="color:grey">PANEL DE ADMINISTRACIÓN</h4>
		<hr>
		<div id="alert-info" class="alert alert-warning alert-dismissible text-center" role="alert" style="margin-top: 10px; margin-bottom: 20px;">
			<button id="btn-close-alert-info" type="button" class="close"><span aria-hidden="true">&times;</span></button>
			<p> Utilizar las siguiente herramientas para administrar su complejo deportivo, horarios, beneficiarios, pre- inscripción directa, etc.</p>
		</div>

		<div class="row text-center">	
			{% if is_granted('ROLE_ADMIN') %}	
			<div id="option-beneficiarios" class="col col-xs-12 col-sm-6 col-md-6 col-lg-4 text-center">
				<a href="{{url('akademia_homepage')}}">
					<div class="card">
						
						<img src="{{ asset('assets/images/preinscripcion-directa.png') }}" width="120" height="120">
						<p class="title-card">Pre-Inscripción directa</p>
					</div>
				</a>
			</div>

			<div id="option-validacion" class="col col-xs-12 col-sm-6 col-md-6 col-lg-4 text-center">
				<a href="{{url('akademia_inscritos')}}">
					<div class="card">

						<img src="{{ asset('assets/images/icon_confirmar.png') }}" width="120" height="120">
						<p class="title-card">Validar Inscripción</p>
					</div>
				</a>
			</div>

			<div id="option-horarios" class="col col-xs-12 col-sm-6 col-md-6 col-lg-4 text-center">
				<a href="{{url('akademia_horarios')}}">
					<div class="card">
						<img src="{{ asset('assets/images/icon_horarios.png') }}" width="120" height="120">
						<p class="title-card">Horarios y beneficiarios</p>
					</div>
				</a>
			</div>

			<div id="option-exportacion" class="col col-xs-12 col-sm-6 col-md-6 col-lg-4 text-center">
				<a href="{{url('akademia_exportData')}}">
					<div class="card">
						<img src="{{ asset('assets/images/icon_data.png') }}" width="120" height="120">
						<p class="title-card">Exportación de datos </p>
					</div>
				</a>
			</div>	
			
			{% elseif is_granted('ROLE_ANALISTA') %}

				<div id="option-exportacion" class="col col-xs-12 col-sm-6 col-md-6 col-lg-4 text-center">
					<a href="{{url('akademia_exportData')}}">
						<div class="card">
							<img src="{{ asset('assets/images/icon_data.png') }}" width="120" height="120">
							<p class="title-card">Exportación de datos </p>
						</div>
					</a>
				</div>	

				<div id="option-deteccion" class="col col-xs-12 col-sm-6 col-md-6 col-lg-4 text-center">
					<a href="{{url('akademia_evaluados')}}">
						<div class="card">
							<img src="{{ asset('assets/images/talento.png') }}" width="120" height="120">
							<p class="title-card">Detección de talentos</p>
						</div>
					</a>
				</div>
				<div id="option-talentos" class="col col-xs-12 col-sm-6 col-md-6 col-lg-4 text-center">
					<a href="{{url('akademia_mostrarTalentos')}}">
						<div class="card">
							<img src="{{ asset('assets/images/talent.png') }}" width="120" height="120">
							<p class="title-card">Gestión de talentos</p>
						</div>
					</a>
				</div>
			{% elseif is_granted('ROLE_DOCENTE') %}
				
				<div id="option-horarios" class="col col-xs-12 col-sm-6 col-md-6 col-lg-4 text-center">
					<a href="{{url('akademia_horarios')}}">
						<div class="card">
							<img src="{{ asset('assets/images/icon_horarios.png') }}" width="120" height="120">
							<p class="title-card">Horarios y beneficiarios</p>
						</div>
					</a>
				</div>

				<div id="option-exportacion" class="col col-xs-12 col-sm-6 col-md-6 col-lg-4 text-center">
					<a href="{{url('akademia_exportData')}}">
						<div class="card">
							<img src="{{ asset('assets/images/icon_data.png') }}" width="120" height="120">
							<p class="title-card">Exportación de datos </p>
						</div>
					</a>
				</div>	

			{% endif %}
		</div>
	</div>

	<hr>
</section>

