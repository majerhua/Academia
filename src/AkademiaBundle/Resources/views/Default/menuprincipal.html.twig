<script type="text/javascript">

	/*Muestra mensaje de alerta*/
	function showAlertMessage(alert, mensaje){
		$(alert).text(mensaje).show('fade');
		setTimeout(function(){
			hideAlertMessage(alert);	
		}, 3000);
	}

	/*Oculta mensaje de alerta*/
	function hideAlertMessage(alert){
		$(alert).hide('fade');		
	}

</script>

