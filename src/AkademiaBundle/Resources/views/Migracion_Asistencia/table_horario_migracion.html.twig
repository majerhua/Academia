

{% if flagHorariosDisponiblesMigracion == 0 %}

	<tbody>
		<tr>
			<td colspan="5"><b class="text-warning" >No existen Horarios Disponibles en esta etapa para la edad del Beneficiario.</b></td>
		</tr>
	</tbody>

{% else %}

	<thead style="color:#fff; background-color:#CB3F1D; display:block;">
	  <tr style="display:block;">
	  	<th class="col-xs-2" style=" background-color:#CB3F1D; float:left; display:block;">Cod</th>
	    <th class="col-xs-2" style=" background-color:#CB3F1D; float:left; display:block;">Edad</th>
	    <th class="col-xs-3" style=" background-color:#CB3F1D; float:left; display:block;">Dias</th>
	    <th class="col-xs-3" style=" background-color:#CB3F1D; float:left; display:block;">Horas</th>
	    <th class="col-xs-2" style=" background-color:#CB3F1D; float:left; display:block;">Elegir</th>
	  </tr>
	</thead>

	<tbody id="bodyHorario" style="height:20vh; overflow-y:auto ; width:100%; display:block; " >
		{% for horario in horarios %}

		<tr style="display:block;">
			<td style="float:left; display:block;" class="col-xs-2">{{horario.id}}</td>
			<td style="float:left; display:block;" class="col-xs-2">{{horario.edad}}</td>

			<td style="float:left; display:block;" class="col-xs-3">
				{% for turno in turnos %}

					{% if turno.idHorario == horario.id %}
						<div>{{turno.frecuencia}}</div>		
					{% endif %}
				{% endfor %}
			</td>

			<td style="float:left; display:block;" class="col-xs-3">
				{% for turno in turnos %}

					{% if turno.idHorario == horario.id %}
						<div>{{turno.hora}}</div>		
					{% endif %}
				{% endfor %}
			</td>

			<td  style="float:left; display:block;" class="col-xs-2" >
				<div class="options">
	    			<label  id="label-checkbox" data-toggle="tooltip" title="Click aquÃ­ para escoger horario!" >
	        			<input type="radio" name="codHorario" value="{{horario.id}}"/>
	        			<img  style="cursor:pointer;" class="img-checkbox"/>   
	   				</label>
	   			</div>
			</td>

		</tr>

		{% endfor %}
	</tbody>

{% endif %}

